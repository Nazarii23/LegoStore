@model Domain.Entities.Product



<div class="well">
    
    <h3>
        <strong>@Model.Name</strong>
        <strong id="price" class="pull-right label label-primary">@Model.Price.ToString("# zl")</strong>
    </h3>
    <span class="lead">@Model.Interest</span>
    <span class="media-left">@Model.Age</span>
    <div class="col-xs-2">
        @using(Html.BeginForm("AddToCart", "Cart"))
        {
            <div class="pull-right">
                @Html.HiddenFor(x => x.ProductId)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" value="Dodac do kosza"/>
            </div>
        }
    </div>

</div>


